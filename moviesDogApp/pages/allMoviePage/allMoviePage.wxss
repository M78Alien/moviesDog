/* pages/allMoviePage/allMoviePage.wxss */
.topBox {
    width: 650rpx;
    height: 115rpx;
    background-color: #F6F6F6;
    margin: 0 25rpx;
    border-radius: 10rpx;
    padding: 25rpx;
    /* display: flex;
    justify-content: space-between;
    align-items: center; */
}
.topTitle {
    font-size: 30rpx;
    font-weight: bold;
}
.pickerView {
    display: flex;
    justify-content: space-between;
    margin-top: 25rpx;
}
.picker {
    width: 170rpx;
    height: 40rpx;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 24rpx;
    padding: 5rpx 14rpx;
    line-height: 40rpx;
    background-color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.movieCard {
    width: 216rpx;
    height: 375rpx;
    /* background-color: rgb(185, 181, 173); */
    float: left;
    margin-right: 25rpx;
    margin-bottom: 20rpx;
}
.movieCardLast {
    margin-right: 0;
}
.cardPic {
    width: 100%;
    height: 300rpx;
    border-radius: 10rpx;
}
.cardBox {
    margin: 25rpx 25rpx 0 25rpx; 
}
.cardBox::after {
    content: "";
    display: block;
    clear: both;
}
.van-search {
    width: 696rpx;
    margin: 25rpx;
    padding: 0 !important;
}
.van-search__content{
    border-radius: 10rpx !important;
    background-color: #F6F6F6 !important;
}
.titleStyle {
    font-size: 22rpx; 
    width: 100%; 
    text-align: center; 
    margin-bottom: 5rpx; 
    font-weight: bold;
    white-space: nowrap; 
    overflow: hidden; 
    text-overflow: ellipsis;
}
.refreshBtn {
    width: auto;
    height: 40rpx;
    background-color: white;
    padding: 0 25rpx;
    font-size: 26rpx;
    line-height: 40rpx;
    border-radius: 12rpx;
    border: #c7c7c7 1rpx solid;
}