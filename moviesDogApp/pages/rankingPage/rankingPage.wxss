/* pages/rankingPage/rankingPage.wxss */
.box {
    margin: 25rpx;
}
.movieCard {
    width: 100%;
    height: 400rpx;
    margin-bottom: 28rpx;
}
.picViewBox {
    width: 100%;
    height: 66%;
    display: flex;
    justify-content: space-between;
}
.picView {
    height: 100%;
    border-radius: 10rpx;
}
.van-rate__item:first-child {
    padding-left: 0 !important;
}
.downText {
    width: 100%;
    font-size: 22rpx; 
    color: #B1B1B1; 
    margin-top: 10rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.cardLine {
    width: 100%;
    padding-bottom: 30rpx;
    border-bottom: solid 2rpx #DDDDDD;
}
.ranking {
    font-weight: normal;
    font-size: 28rpx;
    margin-right: 15rpx;
    margin-top: 5rpx;
}
.toDetail {
    position: absolute;
    top: 15rpx;
    right: 0;
    width: 110rpx;
    height: 50rpx;
    background-color: #3e77ec;
    border-radius: 25rpx;
    line-height: 48rpx;
    text-align: center;
    color: white;
    font-weight: bold;
    font-size: 24rpx;
}