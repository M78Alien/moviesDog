/* pages/roomPage/roomPage.wxss */
.cinemaBox {
    width: 700rpx;
    height: auto;
    /* background-color: azure; */
    padding: 25rpx;
    position: relative;
}
.tipText {
    font-size: 24rpx; 
    margin-top: 10rpx; 
    color: #b1b1b1;
}
.textMax {
    white-space: nowrap; 
    overflow: hidden;    
    text-overflow: ellipsis;
}
.openBtn {
    position: absolute;
    top: 25rpx;
    right: 25rpx;
}
.movieBox {
    width: 660rpx;
    height: 250rpx;
    background-color: rgb(247, 247, 247);
    padding: 20rpx;
    margin: 0 25rpx;
    border-radius: 12rpx;
}
.dateBox {
    width: 100%;
    height: 75rpx;
    border-top: #e0e0e0 1rpx solid;
    border-bottom: #e0e0e0 1rpx solid;
    display: flex;
    align-items: center;
}
.roomBox {
    width: 700rpx;
    height: 105rpx;
    /* background-color: rgb(220, 220, 247); */
    margin-left: 25rpx;
    padding: 25rpx 0;
    display: flex;
    border-bottom: #e0e0e0 1rpx solid;
}
.bugBtn {
    border: #EE4E4E 1rpx solid;
    height: 44rpx;
    width: auto;
    padding: 0 20rpx;
    line-height: 44rpx;
    font-size: 26rpx;
    border-radius: 22rpx;
    color: #EE4E4E;
    margin-left: 30rpx;
}