/* pages/showingHome/showingHome.wxss */
.swiperClass {
    height: 430rpx;
}
.swiperImg {
    width: 750rpx;
    height: 430rpx;
}
.touchTip {
    width: 700rpx;
    height: 70rpx;
    background-color: #F6F6F6;
    margin: 25rpx;
    border-radius: 10rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.tipIcon {
    width: 35rpx;
    height: 35rpx;
    margin: 0 18rpx;
}
.tipText {
    font-size: 24rpx;
    color: #6b6b6b;
    white-space: nowrap; 
    overflow: hidden; 
    text-overflow: ellipsis;
}
.tipTouch {
    width: auto;
    font-size: 24rpx;
    color: #6b6b6b;
    margin: 0 18rpx;
}
.movieCard {
    width: 700rpx;
    height: 225rpx;
    margin: 25rpx;
    display: flex;
}
.movieCardPic {
    width: 22%;
    height: 100%;
}
.cardPic {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}
.movieCardText {
    width: 58%;
    height: 100%;
}
.cardText {
    margin-left: 25rpx;
    width: 90%;
    height: 25%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.typeTab {
    width: auto;
    height: 35rpx;
    padding: 0 6rpx;
    background-color: #cacaca;
    border-radius: 6rpx;
    color: white;
    font-size: 20rpx;
    text-align: center;
    line-height: 36rpx;
    margin-right: 15rpx;
    font-weight: bold;
}
.movieCardBtn {
    width: 20%;
    height: 90%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.cardBtn {
    width: 110rpx;
    height: 50rpx;
    background-color: #EE4E4E;
    border-radius: 25rpx;
    color: white;
    line-height: 48rpx;
    text-align: center;
    font-size: 24rpx;
    font-weight: bold;
}
.cardLine {
    width: 500rpx;
    border-bottom: solid 2rpx #DDDDDD;
    margin-left: 200rpx;
}